<%= form_with model: user do |form| %>
    <div class="mb-3">
      <%= form.label :name, "Name", class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
      <% user.errors.full_messages_for(:name).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= form.label :email, "Email", class: "form-label" %>
      <%= form.text_field :email, class: "form-control" %>
      <% user.errors.full_messages_for(:email).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= form.label :password, "Password", class: "form-label" %>
      <%= form.password_field :password, class: "form-control" %>
      <% user.errors.full_messages_for(:password).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= form.label :super_user_flag, "Choose User Type", class: "form-label" %>
      <%= form.select :super_user_flag, options_for_select([['Privacy type',""], ['Super User', true], ['Normal User', false]]), {}, {class: "form-select"} %>
      <% user.errors.full_messages_for(:super_user_flag).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= form.label :phone, "Phone", class: "form-label" %>
      <%= form.text_field :phone, class: "form-control" %>
      <% user.errors.full_messages_for(:phone).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= form.label :address, "Address", class: "form-label" %>
      <%= form.text_field :address, class: "form-control" %>
      <% user.errors.full_messages_for(:address).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= form.label :birthday, "Birthday", class: "form-label" %>
      <%= form.date_field :birthday, class: "form-control" %>
      <% user.errors.full_messages_for(:birthday).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>

    <div class="mb-3">
      <%= form.submit "Submit", class: "btn btn-outline-success mr-50" %>
      <%= link_to '<button type="button" class="btn btn-outline-warning">Cancel</button>'.html_safe, 
          users_path %>
    </div>
  <% end %>