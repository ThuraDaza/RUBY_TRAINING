<div class="container w-400">
  <h1>Welcome to our page</h1>

  <div class="d-flex justify-content-between mb-50">
    <div>
      <%= link_to "Users", users_path, class: "btn btn-outline-warning mr-50" %>
      <td><%= link_to '<button type="button" class="btn btn-outline-success">Articles</button>'.html_safe, 
          user_path(current_user) %></td>
    </div>
    <%= button_to "Log Out", sign_out_path, class: "btn btn-outline-success" , method: :post  %>        
  </div>
  
  <p>Create New User? <%= link_to "Create New", new_user_path %></p>
  
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">User Type</th>
        <th scope="col">Address</th>
        <th scope="col" colspan="2">Operation</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.super_user_flag == true ? "Super User" : "Normal User" %></td>
          <td><%= user.address %></td>
          <td><%= link_to '<button type="button" class="btn btn-outline-warning">Edit</button>'.html_safe, 
            edit_user_path(user) %></td>
          <td><%= button_to "Delete", user_path(user), 
            method: :delete, data: { turbolinks: false, confirm: "Are you sure?" },
            class: "btn btn-outline-danger" %></td>     
        </tr>
      <% end %>
    </tbody>
  </table>
  
</div>