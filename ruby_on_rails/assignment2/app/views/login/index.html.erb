<div class="container w-300">
  <h1>Welcome Guys</h1>

  <%= form_with url: sign_in_path, method: :post do |form| %>
    <div class="mb-3">
      <%= form.label :email, "Enter Email", class: "form-label" %>
      <%= form.text_field :email, class: "form-control", required: true %>
    </div>
    <div class="mb-3">
      <%= form.label :password, "Enter Password", class: "form-label" %>
      <%= form.password_field :password, class: "form-control", required: true %>
    </div>
    <div class="mb-3">
      <%= link_to "Forgot your password?", password_reset_path %>
    </div>
    <div class="mb-3">
      <%= form.submit "Sign In", class: "btn btn-outline-warning" %>
    </div>
  <% end %>

</div>